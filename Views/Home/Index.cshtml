<section class="py-10 about-us-section sectionList">
    <div class="container">

        <div class="row product-list">
            @foreach (MenuItemGroup group in Model)
            {
                if (group.MenuItems.Any())
                {
                    <div class="col-sm-12 mix subhan-@{@group.Id}">
                        <h2 class="anchor"><b>@group.MenuItemGroupName</b></h2>
                    </div>
                    foreach (MenuItem menuItem in group.MenuItems)
                    {
                        <div class="col-lg-3 mb-4 mix subhan-@{@group.Id}" data-order="@{@group.Id}">
                            <a onclick="showInPopup('@Url.Action("GetDetail","Home", new { Id = menuItem.Id }, Context.Request.Scheme)')">
                                <div class="menu-box-with-order p-div" data-toggle="modal" data-target="#productModal" data-id="59" data-slug="tropical">
                                    <div class="menu-box-img-price img flex align-items-center r-relative">
                                        @if (menuItem.IsNew == true)
                                        {
                                            <span class="menu-box-new">
                                                <span class="food-new">Yeni</span>
                                            </span>
                                        }
                                        <img src="images/@menuItem.ImagePath" alt="Tropical" class="img-fluid" id="_59_img">
                                    </div>
                                    <div class="mt-3 px-3 textSec">
                                        <h5 class="text-green pizza-name-here mb-0">@menuItem.MenuItemName</h5>
                                        <small class="section-text-grey">
                                            @menuItem.MenuItemDescription
                                        </small>


                                        <span class="hide countProduct">
                                            <span class="deskAddBasket">Səbətdə sayı:</span>
                                            <span class="mobAddBasket">
                                                <i class="fa fa-cart-plus"
                                                   aria-hidden="true"></i>
                                            </span>
                                            <span id="product_59">0</span>
                                        </span>

                                        <span class="menu-box-price ">
                                            <span class="food-price">
                                                <span class="now-price">
                                                    @menuItem.Price <span class="manat"
                                                                          style="font-weight:bold;">₼</span>
                                                </span>
                                            </span>
                                        </span>
                                    </div>

                                </div>
                            </a>
                        </div>
                    }
                }
            }
        </div>
    </div>
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

        </div>
    </div>
</section>

