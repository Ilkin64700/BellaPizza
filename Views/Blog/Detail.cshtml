@model Blog
@{
    ViewData["Title"] = "Detail";
}

<section class="blog-page-header">
    <div class="header-img-overlay-black"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8  text-white">
                <h1>Bloq</h1>
                <p class="lead">Loyallıq proqramı</p>
            </div>
        </div>
    </div>
</section>

<section class="post-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h2 class="mt-4 section-title">Loyallıq proqramı</h2>
                <p class="section-text-grey">
                    by
                    <a href="/" class="post-link">Bella Pizza</a>
                </p>
                <hr>
                <small class="section-text-grey">Aprel 01, 2020</small>
                <hr>
                <img class="img-fluid rounded" src="~/images/@Model.Image" alt="Loyallıq proqramı"
                     width="100%">
                <hr>
                <p>
                    <span style="font-size:18px">
                        <span style="font-family:arial,helvetica,sans-serif">
                            <span style="color:#008000">
                                <strong>
                                   @Model.Title&nbsp;<br>
                                    @Model.Description&nbsp;
                                </strong>
                            </span>
                        </span>
                    </span>
                </p>
                <hr>
            </div>
            <div class="col-md-4">
                <div class="card my-4">
                    <h5 class="card-header">Digər bloqlar</h5>
                    <div class="card-body p-3">
                        <ul class="list-unstyled">
                            <li class="mb-3">
                                <a asp-controller="Blog" asp-action="Detail" asp-route-Id="2" class="post-link">Whatsapp sifariş</a>
                            </li>
                            <li class="mb-3">
                                <a asp-controller="Blog" asp-action="Detail" asp-route-Id="3" class="post-link">Yenilik-Sezar pizza</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>