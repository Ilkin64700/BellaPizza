@model BlogVM
@{
    ViewData["Title"] = "Blog";
}

<section class="blog-page-header">
    <div class="header-img-overlay-black"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8  text-white">
                <h1>Bloq</h1>
                <p class="lead">
                    Bella Pizza-ya baş çəkib, burada ən ləzzətli və keyfiyyətli pizzanın
                    hazırlanmasına əmin olacaqsınız!
                </p>
            </div>
        </div>
    </div>
</section>

<section class="events-and-news-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto text-center my-5">
            </div>
        </div>
        <div class="card-deck">
            @foreach (Blog blog in Model.Blogs)
            {
                <div class="col-md-4">
                    <div class="card myCard ">
                        <a asp-controller="Blog" asp-action="Detail" asp-route-Id="@blog.Id">
                            <img class="card-img-top" src="~/images/@blog.Image" alt="Card image cap">
                            <div class="cardFooter">
                                <div class="card-date">
                                    <div class="preparation-date card-date-item">
                                        <p>Aprel 01, 2020</p>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">@blog.Title</h5>
                                    <p class="card-text section-text-grey">
                                        @blog.Description
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>

            }
        </div>
    </div>
</section>