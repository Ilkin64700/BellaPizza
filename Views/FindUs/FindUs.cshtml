@model RelateusVM

@{
    ViewData["Title"] = "FindUs";
}


<section class="blog-page-header">
    <div class="header-img-overlay-black"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8  text-white">
                <h1>Bizim Pizza evimiz</h1>
                <p class="lead">
                    Restoranımızda övladlarınız üçün master-klasslar və uşaq tədbirləri keçirilir
                </p>
            </div>
        </div>
    </div>
</section>

<section class="contact-us-section">
    <div class="container">
        <div class="row contant-us-section-row">
            <div class="col-lg-6 mx-auto">
                <div class="main-about-image-box">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3039.5219807420704!2d49.83898401575871!3d40.37512246609213!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40307d077b995b11%3A0xb34263407c15c50d!2sBella%20Pizza!5e0!3m2!1sen!2sus!4v1568476740216!5m2!1sen!2sus"
                            width="100%" height="400" frameborder="0" style="border:0;border-radius: 6px;"
                            allowfullscreen=""></iframe>
                </div>
            </div>
            <div class="col-lg-6 mx-auto text-center">
                <div class="py-5 px-5 main-contact-us-box">
                    <p class="welcome-text">İş vaxtı @Model.AppDetail.WorkingHours</p>
                    <h1 class="section-title">Bizimlə əlaqə</h1>
                    <img src="/app/templates/main/img/icon_lines.png" alt="" width="16" class="">
                    <ul class="list-unstyled ">
                        <li><a>@Model.AppDetail.Address</a></li>
                        <li class="mobPhone">
                            <a itemprop="telephone" href="tel:*1717">*1717 </a>
                        </li>
                        <li class="mobPhone">
                            <a itemprop="telephone" href="tel:@Model.AppDetail.PhoneNumber">
                                +994 <strong class="">@Model.AppDetail.PhoneNumber</strong>
                            </a>
                        </li>
                        <li class="mobPhone">
                            <a itemprop="telephone" href="tel:@Model.AppDetail.HomeNumber">
                                @Model.AppDetail.HomeNumber
                            </a>
                        </li>
                        <li>
                            <a itemprop="email" href="mailto:@Model.AppDetail.EmailAddress"
                               class="email">@Model.AppDetail.EmailAddress</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="about-page-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 mx-auto about-page-box">
                <div class="about-reservation-box">
                    <div class="text-center reservation-text">
                        <h2 class="section-title">Rezervasiya</h2>
                        <p class="section-text-grey">
                            Bella Pizza-nın möhtəşəm təamlarını dadmaq üçün kafemizdə rezervasiyanı elə indi
                            edin! Bunun üçün
                            <span>bütün operatorlardan</span><a itemprop="telephone" href="tel:*1717">*1717 </a>
                            nömrəsinə zəng edə ya da <a itemprop="telephone" href="tel:+994 55 532 17 17">
                                +994
                                <strong class=""> 55 532 17 17</strong>
                            </a>
                            whatsapp nömrəsinə yaza bilərsiniz! Sizi səbirsizliklə gözləyirik!
                        </p>
                        <a class="btn link-btn " href="tel:*1717">zəng et</a>
                    </div>
                    <div>
                        <img src="images/about_new.jpg" alt="" class="img-fluid w-100">
                    </div>
                </div>
                <div class="about-side">
                    <div class="about-image-box">
                        <img src="images/about.jpg" alt="" class="img-fluid w-100">
                    </div>
                    <div class="text-center about-box-text">
                        <h2 class="section-title">Bella Pizza haqqında</h2>
                        <div class="section-text-grey">
                            <p>
                                Bella Pizza - gülərüz personal, münasib qiymətlər, rahat interyer və ən əsası
                                şəhərin ən ləzzətli pizzası deməkdir! Burada yalnız təzə xəmir və ən keyfiyyətli
                                məhsullar istifadə olunur. Restoranımızda təqdim olunan bütün təamlar peşəkar
                                aşpazlar tərəfindən hazırlanır, odur ki pizzamızın dadına baxandan sonra
                                restoranımız Sizin ən sevimli məkanınıza çevriləcək. Sifarişinizin birbaşa
                                evinizə və ya ofisinizə çatdırılmasını istəsəniz, *1717 nömrəsi ilə əlaqə
                                saxlayıb, çatdırılma xidmətimizdən yararlana bilərsiniz! Həmçinin restoranımızda
                                övladlarınız üçün master-klasslar və uşaq tədbirləri keçirilir! Bella Pizza-ya
                                baş çəkib, burada ən ləzzətli və keyfiyyətli pizzanın hazırlanmasına əmin
                                olacaqsınız!
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

