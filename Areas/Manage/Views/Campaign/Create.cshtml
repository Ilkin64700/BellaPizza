@model Campaign

@{
    ViewData["Title"] = "Create";
}

<form method="post" enctype="multipart/form-data">

    <div class="mb-3">
        <label asp-for="@Model.Title"></label>
        <input class="form-control" asp-for="@Model.Title">
        <span class="alert-danger" asp-validation-for="@Model.Title"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="@Model.Description"></label>
        <input class="form-control" asp-for="@Model.Description">
        <span class="alert-warning" asp-validation-for="@Model.Description"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Photo"></label>
        <input class="form-control" accept="image/*" asp-for="@Model.Photo">
        <span class="alert-danger" asp-validation-for="@Model.Photo"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

