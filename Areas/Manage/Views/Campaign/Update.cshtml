@model Campaign
@{
    ViewData["Title"] = "Update";
}

<form method="post" enctype="multipart/form-data">
    <div class="card" style="width: 18rem;">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <img style="max-width:100%" src="~/images/@Model.Image" alt="" />
            </li>
        </ul>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Title"></label>
        <input class="form-control" asp-for="@Model.Title">
        <span class="alert-danger" asp-validation-for="@Model.Title"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Description"></label>
        <input class="form-control" asp-for="@Model.Description">
        <span class="alert-warning" asp-validation-for="@Model.Description"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Photo"></label>
        <input class="form-control" accept="image/*" asp-for="@Model.Photo">
        <span class="alert-danger" asp-validation-for="@Model.Photo"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

